<%- include('partials/head') %> <%- include('partials/navbar') %>

<div class="container-fluid sign-up">
  <div
    class="row justify-content-center align-items-center"
    style="height: 100vh"
  >
    <div class="col-12 col-md-10">
      <form
        class="entry-form-container"
        style="background-color: rgba(211, 211, 211, 0.25); color: white"
        action="/signup"
        method="POST"
      >
        <h2>Sign up</h2>

        <div class="row">
          <div class="col-6">
            <div class="form-group">
              <label for="email">Email: </label>
              <input
                type="email"
                class="form-control"
                name="email"
                id="email"
              />
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-6">
            <div class="form-group">
              <label for="password">Password: </label>
              <input
                type="password"
                class="form-control"
                name="password"
                id="password"
              />
            </div>
          </div>
        </div>

        <div class="row justify-content-end">
          <div class="col-12">
            <button type="submit" class="btn btn-light">Submit</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include ('partials/footer') %>
