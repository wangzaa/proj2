<%- include ('partials/head') %> <%- include ('partials/navbar') %>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="/admin-page1">Customer Orders</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" href="/delivery">Deliveries</a>
  </li>
</ul>

<div class="row justify-content-center">
  <div class="card px-0" style="width: 90vw">
    <h3>Delivery Tracking</h3>

    <div class="table-responsive">
      <table class="table table-striped">
        <tr>
          <th>Status</th>
          <th>Invoice No.</th>
          <th>Delivery Date</th>
          <th>Delivery Mode</th>
          <th></th>
        </tr>

        <% for (let i = 0; i< deliveryNotes.length; i +=1){ %>
        <tr>
          <td><%=deliveryNotes[i].status %></td>
          <td>
            <a href="/invoice/<%=deliveryNotes[i].delivery_number %>">
              <%=deliveryNotes[i].delivery_number %></a
            >
          </td>
          <td>
            <%=deliveryNotes[i].delivery_date.toLocaleDateString('en-GB') %>
          </td>
          <td><%=deliveryNotes[i].mode_delivery %></td>
          <td>
            <a href="/invoice/<%=deliveryNotes[i].delivery_number %>/edit"
              >üìù</a
            >
          </td>
        </tr>
        <% }%>
      </table>
    </div>
  </div>
</div>

