<%- include ('partials/head') %> <%- include ('partials/navbar') %>

<div class="row justify-content-center">
  <div class="card px-0" style="width: 90vw">
    <h3>Track your deliveries</h3>

    <div class="table-responsive">
      <table
        class="table table-striped table-bordered table-sm"
        cellspacing="0"
        width="100%"
      >
        <tr>
          <th>Status</th>
          <th>Invoice No.</th>
          <th>Delivery Date</th>
          <th>Action</th>
        </tr>

        <% for (let i = 0; i< deliveryNotes.length; i +=1){ %>
        <tr>
          <td><%=deliveryNotes[i].status %></td>
          <td>
            <a href="/invoice/<%=deliveryNotes[i].delivery_number %>">
              <%=deliveryNotes[i].delivery_number %></a
            >
          </td>
          <td>
            <%=deliveryNotes[i].delivery_date.toLocaleDateString('en-GB') %>
          </td>
          <td>
            <a
              class="btn btn-outline-secondary"
              href="/invoice/<%=deliveryNotes[i].delivery_number %>/edit"
              role="button"
              >Update</a
            >
          </td>
        </tr>
        <% }%>
      </table>
    </div>
  </div>
</div>

<%- include ('partials/footer') %>
