<%- include ('partials/head') %> <%- include ('partials/navbar') %>


<div class="row justify-content-center">
  <div class="card px-0" style="width: 90vw">
    <h3>Auction List</h3>
 

      <form id="sort-section">
        <select name="sorter" id="sorter">
          <option value="species">Item</option>
          <option value="size">Item Size</option>
          <option value="qual">Grade</option>
          <option value="vessel_name">Vessel</option>
        </select>
        <button
          class="btn btn-outline-secondary btn-sm"
          input
          type="submit"
          id="sort-button"
        >
          Sort
        </button>
      </form>

    <div class="table-responsive">
      <table class="table table-striped">
        <tr>
          <th>Item</th>
          <th>Size</th>
          <th>Grade</th>
          <th>Quantity (kg)</th>
          <th>Price / kg</th>
          <th>Vessel</th>
        </tr>

       <% for (let i = 0; i < auctionList.length; i += 1) { %>
        <tr>
          <td><%= auctionList[i].species %></td>
           <td><%= auctionList[i].size %></td>
           <td class="text-center"><%=auctionList[i].qual %></td>
           <td class="text-center"><%= auctionList[i].weight %></td>
          <td class="text-center">
            <%=Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD'
            }).format(auctionList[i].price_box) %>
          </td>
           <td><%= auctionList[i].vessel_name %></td>

            </form>
          </th>
        </tr>
        <% }%>
      </table>
    </div>
  </div>

  <%- include ('partials/footer') %>
</div>
