<%- include ('partials/head') %> <%- include ('partials/navbar') %>
<div class="container">
  <div class="row justify-content-center">
    <div class="card px-0" style="width: 90vw">
      <ul class="list-group list-group-flush">
        <h4>Invoice Details <%= invoiceID %></h4>
        <h4>Invoice Total Amount: 
          <%=Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD'
            }).format(invoiceTotal.tot_invoice ) %></h4>

 <div class="table-responsive">
    <table
      class="table table-striped table-bordered table-sm"
      cellspacing="0"
      width="100%"
    >
      <tr>
        <th>Delivery Date</th>
        <th>Item</th>
        <th>Grade</th>
        <th>Weight</th>
        <th>Price/kg</th>
        <th>Sub-total</th>
      </tr>
      <tr>
       <% for (let i = 0; i< singleInvoice.length; i +=1){ %>
        <td><%=
              singleInvoice[i].delivery_date.toLocaleDateString() %></td>
        <td><%= singleInvoice[i].species %> | <%= singleInvoice[i].size %></td>
        <td><%= singleInvoice[i].qual %></td>
        <td><%= singleInvoice[i].weight %></td>
        <td> <%=Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD'
            }).format(singleInvoice[i].price_kg ) %></td>
        <td><%=Intl.NumberFormat('en-US', { style: 'currency', currency: 'USD'
            }).format(singleInvoice[i].price_total ) %></td>
      </tr>
        <% }%>
      </tr>
    </table>
  </div>
</div>
  </div>
  <br>
  
  <button type = "button" class = "btn btn-secondary" onclick="history.back()">Go Back</button>
</div>

<%- include ('partials/footer') %>
